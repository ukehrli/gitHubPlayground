<?xml version='1.0' encoding='utf-8'?>
<widget id="ch.wbss.rhb.qs.dev" version="1.1.7" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>QUALIDEV</name>
    <description>
    </description>
    <author email="info@wbss.ch" href="https://www.wbss.ch">
        W.B.S.S GmbH
    </author>

    <content src="index.html" />
    <access origin="*" />
    <access origin="cdvfile://*" />

    <!-- iOS only preferences -->
    <preference name="EnableViewportScale" value="true"/>
    <preference name="TopActivityIndicator" value="white"/>
    <preference name="SuppressesIncrementalRendering" value="false"/>
    <preference name="UIWebViewDecelerationSpeed" value="normal" />
    <preference name="target-device" value="universal" />
    <preference name="deployment-target" value="8.0" />
    <preference name="SuppressesLongPressGesture" value="false" />
    <preference name="Suppresses3DTouchGesture" value="true" />

    <!-- Android only preferences -->
    <preference name="KeepRunning" value="false"/>
    <preference name="LoadUrlTimeoutValue" value="20000"/>
    <preference name="LogLevel" value="ERROR"/>
    <preference name="DefaultVolumeStream" value="call" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />

    <!--
    <preference name="keepRunning" value="false" />
    <preference name="StatusBarBackgroundColor" value="#303F9F" />
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="UIWebViewBounce" value="false" />
    <preference name="BackupWebStorage" value="local"/>
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />-->
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="5000" />

    <preference name="xwalkVersion" value="17+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />

    <!-- plugins add:  Best practice -->
    <!-- 1. define plugins dependencies in config.xml (NOT cordova-plugin-media it is customized -->
    <!-- 2. remove platforms and empty plugins folder -->
    <!-- 3. run: cordova platform add xxx -->
    <plugin name="cordova-plugin-file" spec="4.2.0" />
    <!--<plugin name="cordova-plugin-media" spec="1.0.1"  />-->
    <plugin name="cordova-plugin-statusbar" spec="2.1.3" />
    <plugin name="cordova-plugin-whitelist" spec="1.2.2" />
    <plugin name="cordova-plugin-camera" spec="2.2.0" />
    <plugin name="cordova-plugin-device" spec="1.1.2" />
    <plugin name="cordova-plugin-geolocation" spec="2.2.0" />
    <plugin name="cordova-plugin-globalization" spec="1.0.3" />
    <plugin name="cordova-plugin-inappbrowser" spec="1.6.1" />
    <plugin name="cordova-plugin-network-information" spec="1.2.1" />
    <plugin name="cordova-plugin-splashscreen" spec="3.2.2" />
    <plugin name="cordova-plugin-app-version" spec="0.1.8" />
    <plugin name="phonegap-plugin-barcodescanner" spec="~6.0.6">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="To scan barcodes" />
    </plugin>

    <platform name="android">

        <icon src="assets/rhb/icon_android/icon-port-hdpi.png" density="hdpi"/>
        <icon src="assets/rhb/icon_android/icon-port-ldpi.png" density="ldpi"/>
        <icon src="assets/rhb/icon_android/icon-port-mdpi.png" density="mdpi"/>
        <icon src="assets/rhb/icon_android/icon-port-xhdpi.png" density="xhdpi"/>
        <icon src="assets/rhb/icon_android/icon-port-xxhdpi.png" density="xxhdpi"/>
        <icon src="assets/rhb/icon_android/icon-port-xxxhdpi.png" density="xxxhdpi"/>

        <splash src="assets/rhb/splash_android/splash-port-hdpi.png" density="port-hdpi"/>
        <splash src="assets/rhb/splash_android/splash-port-ldpi.png" density="port-ldpi"/>
        <splash src="assets/rhb/splash_android/splash-port-mdpi.png" density="port-mdpi"/>
        <splash src="assets/rhb/splash_android/splash-port-xhdpi.png" density="port-xhdpi"/>
        <splash src="assets/rhb/splash_android/splash-port-xxhdpi.png" density="port-xxhdpi"/>
        <splash src="assets/rhb/splash_android/splash-port-xxxhdpi.png" density="port-xxxhdpi"/>

    </platform>

